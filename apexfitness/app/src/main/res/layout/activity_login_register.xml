<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Background Image -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/heropic"
        android:scaleType="centerCrop"
        android:alpha="0.85" />

    <!-- Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apex Fitness"
            android:textSize="36sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp" />

        <!-- Subtitle -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A NEW WORLD OF TRAINING"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Take your training to the next level, at the gym, at home, at any time."
            android:textColor="#CCCCCC"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_marginBottom="24dp" />

        <!-- Rounded Email Field -->
        <EditText
            android:id="@+id/emailEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:background="@drawable/rounded_edittext"
            android:layout_marginBottom="12dp"
            android:textColor="#000000"
            android:textSize="16sp" />

        <!-- Rounded Password Field -->
        <EditText
            android:id="@+id/passwordEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:background="@drawable/rounded_edittext"
            android:layout_marginBottom="16dp"
            android:textColor="#000000"
            android:textSize="16sp" />

        <!-- Role Selection -->
        <RadioGroup
            android:id="@+id/roleRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/memberRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Member"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                app:buttonTint = "@color/white"
                android:checked="true" />

            <RadioButton
                android:id="@+id/trainerRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trainer"
                android:textStyle="bold"
                app:buttonTint = "@color/white"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_marginStart="32dp" />
        </RadioGroup>

        <!-- Black Register Button -->
        <Button
            android:id="@+id/registerButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register"
            android:backgroundTint="#000000"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginBottom="12dp" />

        <!-- Black Login Button -->
        <Button
            android:id="@+id/loginButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login"
            android:backgroundTint="#000000"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
    </LinearLayout>
</FrameLayout>
