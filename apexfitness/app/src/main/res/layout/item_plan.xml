<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="?android:attr/selectableItemBackground">

    <TextView
        android:id="@+id/planTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plan Title"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/planDescriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plan Description"
        android:textSize="14sp"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/planTypeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type: Workout"
        android:textSize="14sp"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/assignedToTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Assigned to: member_uid"
        android:textSize="14sp"
        android:layout_marginTop="2dp" />

</LinearLayout>
